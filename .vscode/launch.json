{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "fs-uae-run",
      "request": "launch",
      "name": "WINDOWS Run",
      "buildWorkspace": true,
      "emulator": "${workspaceFolder}\\bin\\windows_x64\\fs-uae.exe",
      "options": [
        "--chip_memory=512",
        "--hard_drive_0=${workspaceFolder}\\fs-uae\\hd0",
        "--joystick_port_1=none",
        "--amiga_model=A500",
        "--slow_memory=512"
      ]
    },
    {
      "type": "fs-uae",
      "request": "launch",
      "name": "WINDOWS Debug",
      "stopOnEntry": false,
      "serverName": "localhost",
      "serverPort": 6860,
      "trace": false,
      "startEmulator": true,
      "buildWorkspace": true,
      "emulator": "${workspaceFolder}\\bin\\windows_x64\\fs-uae.exe",
      "program": "${workspaceFolder}\\fs-uae\\hd0\\out.exe",
      "options": [
        "--chip_memory=1024",
        "--hard_drive_0=${workspaceFolder}\\fs-uae\\hd0",
        "--joystick_port_1=none",
        "--amiga_model=A1200",
        "--slow_memory=1792",
        "--remote_debugger=200",
        "--use_remote_debugger=true",
        "--automatic_input_grab=0"
      ]
    },
    {
      "type": "fs-uae-run",
      "request": "launch",
      "name": "OSX Run",
      "buildWorkspace": true,
      "emulator": "${workspaceFolder}/bin/osx/fs-uae",
